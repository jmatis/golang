package main

import "fmt"
import "math/rand"
import "time"

func main() {
        //constants and variables
        const max int32 = 20
        var answer int32
        // sort out random number generator and generate random number
        seed := time.Now().UnixNano()
        rnd := rand.New(rand.NewSource(seed))
        secret := rnd.Int31n(max)
        // print basic information
        fmt.Printf("Hi, i'm thinking of a number between 0 and %d. Can you guess it?\n", max)
        // print question and wait for an answer
        fmt.Print("Guess my number: ")
        _, _ = fmt.Scanf("%d", &answer)
        for {
                if answer > secret {
                        fmt.Println("My number is smaller")
                }
                if answer < secret {
                        fmt.Println("My number is bigger")
                }
                if answer == secret {
                        fmt.Println("Well done, You guessed it!")
                        break
                }
                fmt.Print("Guess my number: ")
                _, _ = fmt.Scanf("%d", &answer)
        }
}
